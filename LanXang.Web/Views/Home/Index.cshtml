        <div class="image_wrapper2"><img src="@Url.Content("~/Content/images/eel.jpg")" alt="eel roll" /></div> 
        <h5>Eel roll</h5> 
    </div> 
            
    <div class="col_w190 float_l"> 
        <div class="image_wrapper2"><img src="@Url.Content("~/Content/images/rainbow.jpg")" alt="rainbow roll" /></div> 
        <h5>Rainbow roll</h5> 
    </div> 
            
    <div class="cleaner"></div> 
    <div class="button float_r">@Html.ActionLink("View More...", "FeaturedSushi")</div> 
            
</div> 
        
