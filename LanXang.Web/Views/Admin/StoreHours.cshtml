@model LanXang.Web.Viewmodels.StoreHoursVM
@{
    ViewBag.Title = "StoreHours";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section header {
    <script type="text/javascript">
        $(function () {
            var model = @Html.Raw(Json.Encode(Model));

            var vm = ko.mapping.fromJS(model);

            ko.applyBindings(vm, document.getElementById('store-hours-container'));
        });
    </script>
}

<h2>StoreHours</h2>
<div id="store-hours-container">
    <div class="header_address rightPadding"> 
        <strong><u>Store Hours</u></strong><br /> 
        <span data-bind="text: Line1"></span><br /> 
        <span data-bind="text: Line2"></span><br />
        <span data-bind="text: Line3"></span>
    </div>

    @using (Html.BeginForm())
    {
    <table>
        <tr>
            <td>Line 1</td>
            <td>@Html.TextBoxFor(p => p.Line1, new { data_bind = "value: Line1" })</td>
        </tr>
        <tr>
            <td>Line 2</td>
            <td>@Html.TextBoxFor(p => p.Line2, new { data_bind = "value: Line2" })</td>
        </tr>
        <tr>
            <td>Line 3</td>
            <td>@Html.TextBoxFor(p => p.Line3, new { data_bind = "value: Line3" })</td>
        </tr>
    </table>
    <input type="submit" value="Save" name="save" />
    }
</div>